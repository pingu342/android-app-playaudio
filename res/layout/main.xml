<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<TextView android:id="@+id/StatusTextView"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		/>
	<ScrollView
		android:layout_height="80dip"
		android:layout_width="fill_parent">
		<TextView android:id="@+id/LogTextView"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			/>
	</ScrollView>
	<RadioGroup android:id="@+id/SelectModeRadioGroup"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<RadioButton android:id="@+id/SelectModeRadioButton_MIC"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="MIC" />
		<RadioButton android:id="@+id/SelectModeRadioButton_WAVE_FILE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="WAV FILE" />
	</RadioGroup>
	<RadioGroup android:id="@+id/SampleRateRadioGroup"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<RadioButton android:id="@+id/SampleRateRadioButton_44100"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="44.1 kHz" />
		<RadioButton android:id="@+id/SampleRateRadioButton_16000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="16 kHz" />
	</RadioGroup>
	<Button android:text="AudioTrack Start" android:id="@+id/AudioTrackPlayButton" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	<Button android:text="AudioTrack Stop" android:id="@+id/AudioTrackStopButton" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	<Button android:text="MediaPlayer Start" android:id="@+id/MediaPlayerPlayButton" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	<Button android:text="MediaPlayer Stop" android:id="@+id/MediaPlayerStopButton" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
</LinearLayout>

